@model AccountManagement.Application.Contracts.Account.ResetPasswordCommand
@{
    ViewData["Title"] = "تغییر رمز";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">تغییر رمز</li>
        </ul>
    </nav>
</div>

<main class="client-page">
    <div class="container-content">

        <header><h2> تغییر رمز </h2></header>

        <div class="form-layer">

            <form asp-controller="Account" asp-action="ResetPassword" method="post">

                <input type="hidden" asp-for="ActiveCode" />

                <div class="input-group">
                    <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" class="form-control" placeholder="رمز عبور جدید">
                </div>

                <div class="input-group">
                    <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="RePassword" class="form-control" placeholder="تکرار رمز عبور">
                </div>

                <div asp-validation-summary="All" class="text-danger">
                </div>

                <div class="link">
                    <a asp-controller="Account" asp-action="Login"> <i class="zmdi zmdi-arrow-back"></i> بازگشت </a>
                </div>

                <button class="btn btn-success"> بازیابی رمز </button>

            </form>
        </div>

    </div>
</main>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}

