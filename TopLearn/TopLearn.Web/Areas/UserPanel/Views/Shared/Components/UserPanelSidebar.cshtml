@model TopLearn.Query.Contracts.UserPanel.AccountQueryModel
@{
    Layout = null;
}


<div class="col-md-3 col-sm-4 col-xs-12">
    <aside>
        <div class="avatar-layer">
            <div class="img-layer">
                <a href="" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                <img src="~/Files/UserImages/@Model.ImageName" alt="@Model.FullName">
            </div>
            <div class="detail">
                <span> @Model.FullName </span>
                <span> عضویت : @Model.RegisterDate </span>
            </div>
        </div>

        <section>
            <header><h3> میز کار </h3></header>
            <div class="inner">
                <ul>
                    <li><a asp-area="UserPanel" asp-controller="Home" asp-action="Index"> مشاهده حساب کاربری </a></li>
                    <li><a asp-area="UserPanel" asp-controller="Home" asp-action="EditProfile"> ویرایش حساب کاربری </a></li>
                    <li><a href=""> تغییر رمز عبور </a></li>
                    <li><a asp-area="" asp-controller="Account" asp-action="Logout"> خروج از حساب کاربری </a></li>
                </ul>
            </div>
        </section>
    </aside>
</div>