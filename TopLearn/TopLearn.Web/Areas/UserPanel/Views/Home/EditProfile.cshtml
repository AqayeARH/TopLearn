@model AccountManagement.Application.Contracts.Account.EditProfileCommand
@{
    ViewData["Title"] = "ویرایش حساب کاربری";
}


<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">تاپ لرن</a></li>
            <li class="breadcrumb-item"><a asp-area="UserPanel" asp-controller="Home" asp-action="Index">حساب کاربری</a></li>
            <li class="breadcrumb-item active" aria-current="page"> ویرایش حساب کاربری </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                @* Side bar *@
                @await Component.InvokeAsync("UserPanelSidebar")

                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1> ویرایش حساب کاربری </h1>
                        </header>
                        <div class="inner form-layer">
                            <form asp-area="UserPanel" asp-controller="Home" asp-action="EditProfile"
                                  method="post"
                                  enctype="multipart/form-data">
                                  
                                <input type="hidden" asp-for="ImageName"/>

                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input asp-for="FullName" class="form-control" placeholder="نام و نام خانوادگی">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-email"></i></span>
                                            <input asp-for="Email" class="form-control" placeholder="ایمیل">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                            <input asp-for="Username" class="form-control" placeholder="نام کاربری">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="zmdi zmdi-image"></i></span>
                                            <input asp-for="Image" class="form-control" placeholder="تصویر">
                                        </div>
                                    </div>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> ویرایش اطلاعات </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
