@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AccountManagement.Application.Contracts.Wallet.ChargeWalletCommand
@{
    ViewData["Title"] = "کیف پول شما";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">تاپ لرن</a></li>
            <li class="breadcrumb-item"><a asp-area="UserPanel" asp-controller="Home" asp-action="Index">حساب کاربری</a></li>
            <li class="breadcrumb-item active" aria-current="page"> کیف پول شما </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                @* Sidebar *@
                @await Component.InvokeAsync("UserPanelSidebar")

                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header>
                            <h1> گزارش کیف شما </h1>
                        </header>
                        <div class="inner">
                            <h3> شارژ کیف پول </h3>
                            <div class="inner form-layer">
                                <form asp-area="UserPanel" asp-controller="Wallet" asp-action="Index"
                                      method="post">
                                    <div class="row">
                                        <div class="col-md-7 col-sm-8 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="zmdi zmdi-money"></i></span>
                                                <input type="number" asp-for="Amount" class="form-control" placeholder="مبلغ به تومان">
                                            </div>
                                        </div>
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="col-md-7 col-sm-8 col-xs-12">
                                            <button class="btn btn-success"> شارژ کیف پول </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <hr />
                            @await Component.InvokeAsync("WalletReport")
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}